<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <include layout="@layout/custom_toolbar_layout" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbar_my_profile"
        android:orientation="vertical"
        android:padding="@dimen/margin_5">

        <TextView
            android:id="@+id/downloadUrbanClap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/hand_shake"
            android:drawablePadding="@dimen/margin_16"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/text_size_10sp"
            android:text="@string/download_uc_partner_app"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/aboutUs_myProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_black"
            android:drawablePadding="@dimen/margin_16"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/text_size_10sp"
            android:text="@string/about_urbanclap"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/shareUrbanClap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:drawablePadding="@dimen/margin_16"
            android:fontFamily="sans-serif-medium"
            android:padding="@dimen/text_size_10sp"
            android:text="@string/share_urbanclap"
            android:textSize="@dimen/text_size_16sp" />


        <ImageView
            android:layout_width="@dimen/margin_30"
            android:layout_height="@dimen/margin_30"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10"
            android:src="@drawable/ic_launcher_round"
        />
    </LinearLayout>
</RelativeLayout>