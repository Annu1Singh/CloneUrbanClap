<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_screen_item_horizontal_card_ui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_16"
    android:layout_marginBottom="@dimen/margin_16"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/service_list_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/windowBackground"
            app:title="Custome Services">


            <TextView
                android:id="@+id/searchBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_180"
                android:baselineAligned="true"
                android:drawableRight="@drawable/ic_search_black"
                android:drawableTint="@color/black"
                android:padding="@dimen/margin_10" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview"
            android:layout_width="@dimen/margin_93"
            android:layout_height="@dimen/margin_93"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/btnbground" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_14"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="@dimen/margin_93"
            android:maxLines="1"
            android:text="Electrician"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />

        <include layout="@layout/vertical_divider" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview1"
            android:layout_width="@dimen/margin_93"
            android:layout_height="@dimen/margin_93"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/btnbground" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_14"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="@dimen/margin_93"
            android:maxLines="1"
            android:text="Plumbers"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />

        <include layout="@layout/vertical_divider" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview2"
            android:layout_width="@dimen/margin_93"
            android:layout_height="@dimen/margin_93"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/btnbground" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_14"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="@dimen/margin_93"
            android:maxLines="1"
            android:text="Carpenters"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />

        <include layout="@layout/vertical_divider" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />

</LinearLayout>
