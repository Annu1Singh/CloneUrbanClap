<?xml version="1.0" encoding="utf-8" ?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_screen_item_single_card_ui"
    android:layout_width="fill_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="@dimen/margin_4"
    android:layout_marginRight="@dimen/margin_4"
    android:clickable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="5.0dip"
    app:cardElevation="3.0dip"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1.1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:gravity="center|start"
                    android:orientation="vertical"
                    android:weightSum="0.6">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:maxLines="3"
                        android:text="Beauty Services at Home"
                        android:textSize="@dimen/text_size_16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:gravity="start|center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:maxLines="1"
                            android:textColor="@color/green_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wax"/>

                        <TextView
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/green_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "/>
                        <TextView
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/green_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Facial"/>

                        <TextView
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/green_confirm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "/>
                        <TextView
                            android:textStyle="normal"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/green_confirm"
                            android:layout_width="wrap_content"
                            android:maxLines="1"
                            android:layout_height="wrap_content"
                            android:text="Packages"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:gravity="center"
                android:orientation="vertical">

                <com.joanzapata.iconify.widget.IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_right_black"
                    android:padding="@dimen/margin_2"
                    android:shadowColor="@color/grey_txt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="107dp"
                    android:background="@drawable/placeholder_drawable" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
