<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_light"
    tools:context=".HomeScreenActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/home_screen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/home_screen_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_toolbar"
        android:layout_marginTop="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/include_searchView"
                layout="@layout/homescreen_sarchview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/include_searchView"
                android:orientation="vertical">

            <include layout="@layout/carousel_single_item"/>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:orientation="vertical">
                <include layout="@layout/single_service_element_home_screen"/>
                <include layout="@layout/single_service_element_home_screen"/>
                <include layout="@layout/single_service_element_home_screen"/>
                <include layout="@layout/single_service_element_home_screen"/>
                <include layout="@layout/home_ins_protection_prg"/>
                <include layout="@layout/bottom_sheet_of_home"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
