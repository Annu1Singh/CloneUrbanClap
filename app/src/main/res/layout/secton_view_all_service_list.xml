<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_grey_light"
    android:layout_margin="@dimen/margin_2"
    android:elevation="@dimen/margin_5"
    android:focusable="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="@dimen/margin_2"
        android:layout_alignParentLeft="true"
        android:id="@+id/view_all_service_list_item_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/round_corners"
        android:contentDescription="TODO" />

    <TextView
        android:layout_margin="@dimen/margin_5"
        android:layout_toRightOf="@id/view_all_service_list_item_image"
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:maxEms="11"
        android:text="Chimney Depp Cleaning(Without )"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp" />

    <TextView
        android:drawableLeft="@drawable/rupee"
        android:layout_margin="@dimen/margin_5"
        android:layout_below="@id/title_tv"
        android:layout_toRightOf="@id/view_all_service_list_item_image"
        android:id="@+id/price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Rupee 200"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp" />
    <TextView
        android:visibility="invisible"
        android:layout_margin="@dimen/margin_5"
        android:layout_below="@id/title_tv"
        android:layout_toRightOf="@id/price_tv"
        android:id="@+id/offer_price"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:text="Rupee 200"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp" />

    <TextView
        android:layout_margin="@dimen/margin_5"
        android:layout_below="@id/price_tv"
        android:layout_toRightOf="@id/view_all_service_list_item_image"
        android:id="@+id/type_of_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type of service"
        android:textSize="@dimen/text_size_14sp" />
    <TextView
        android:layout_margin="@dimen/margin_5"
        android:id="@+id/serviceTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_tv"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_toRightOf="@id/type_of_service"
        android:drawableLeft="@drawable/ic_access_time_black"
        android:drawablePadding="@dimen/margin_4"
        android:drawableTint="@color/light_royal_blue"
        android:text="70 min" />

    <TextView
        android:id="@+id/details"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textColor="@color/light_royal_blue"
        android:drawableTint="@color/light_royal_blue"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black"
        android:layout_alignParentRight="true"
        android:layout_below="@id/price_tv"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black" />


    <LinearLayout
        android:layout_margin="@dimen/margin_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_round_blue_bg"
        android:orientation="horizontal">

        <TextView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_remove_black"
            android:drawableTint="@color/light_royal_blue"
            android:padding="@dimen/margin_5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_5"
            android:text="ADD"
            android:textAllCaps="true" />

        <TextView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_black"
            android:drawableTint="@color/light_royal_blue"
            android:padding="@dimen/margin_5" />
    </LinearLayout>
</RelativeLayout>

</LinearLayout>
