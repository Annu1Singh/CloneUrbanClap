<?xml version="1.0" encoding="utf-8" ?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_toolbar_wedget"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:popupTheme="@android:style/ThemeOverlay.Material.ActionBar"
    android:background="@color/primary"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:targetApi="lollipop">
<RelativeLayout
    android:gravity="center|left|start"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textAlignment="center"
        android:id="@+id/textView_projectname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="20"
        android:maxLines="1"
        android:text="Custom Toolbar"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_22sp" />

    <Button
        android:id="@+id/custome_toolbar_loginbtn"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:elevation="@dimen/margin_10"
        android:textColor="@color/white"
        android:background="@drawable/round_corner_black_4"
        android:layout_alignEnd="@id/custom_toolbar_wedget"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/custom_toolbar_wedget"
        tools:ignore="NotSibling" />

</RelativeLayout>
</androidx.appcompat.widget.Toolbar>
