<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_screen_item_horizontal_card_ui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_16"
    android:layout_marginBottom="@dimen/margin_16"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <androidx.appcompat.widget.Toolbar
          android:layout_width="match_parent"
          android:layout_height="?actionBarSize"
          app:title="Cleaning Services"
          android:background="@color/white">


      </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/margin_93"
        android:layout_height="@dimen/margin_93"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/round_corners" />

    <TextView
        android:textSize="@dimen/text_size_14sp"
        android:layout_margin="@dimen/margin_14"
        android:fontFamily="sans-serif-medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sofa Cleaning"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="top"
        android:lineSpacingExtra="2.0dip"
        android:maxWidth="@dimen/margin_93"
        android:maxLines="1"
        android:textColor="@color/black" />
    </LinearLayout>
    <View android:layout_height="@dimen/margin_1" android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_93"
            android:layout_height="@dimen/margin_93"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/round_corners" />

        <TextView
            android:textSize="@dimen/text_size_14sp"
            android:layout_margin="@dimen/margin_14"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sofa Cleaning"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="@dimen/margin_93"
            android:maxLines="1"
            android:textColor="@color/black" />
    </LinearLayout>
    <View android:layout_height="@dimen/margin_1" android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_93"
            android:layout_height="@dimen/margin_93"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/round_corners" />

        <TextView
            android:textSize="@dimen/text_size_14sp"
            android:layout_margin="@dimen/margin_14"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sofa Cleaning"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="@dimen/margin_93"
            android:maxLines="1"
            android:textColor="@color/black" />
    </LinearLayout>
    <View android:layout_height="@dimen/margin_1" android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/margin_93"
            android:layout_height="@dimen/margin_93"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/round_corners" />

        <TextView
            android:textSize="@dimen/text_size_14sp"
            android:layout_margin="@dimen/margin_14"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sofa Cleaning"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="@dimen/margin_93"
            android:maxLines="1"
            android:textColor="@color/black" />
    </LinearLayout>
    <View android:layout_height="@dimen/margin_1" android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview"
            android:layout_width="@dimen/margin_93"
            android:layout_height="@dimen/margin_93"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/round_corners" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name"
            android:textSize="@dimen/text_size_14sp"
            android:layout_margin="@dimen/margin_14"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sofa Cleaning"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="@dimen/margin_93"
            android:maxLines="1"
            android:textColor="@color/black" />
    </LinearLayout>
    <View android:layout_height="@dimen/margin_1" android:layout_width="match_parent"/>
</LinearLayout>
