<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_screen_item_horizontal_card_ui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/service_list_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:titleTextColor="@color/black"
                app:titleTextAppearance="@style/TextAppearance.AppCompat.Small"
                android:background="@color/windowBackground"
                app:title="Custome Services">


                <TextView
                    android:id="@+id/searchBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_180"
                    android:baselineAligned="true"
                    android:textSize="@dimen/text_size_12sp"
                    android:drawableRight="@drawable/ic_search_black"
                    android:drawableTint="@color/black"
                    android:padding="@dimen/margin_10" />
            </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true"
        android:layout_margin="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/btnbground" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_14"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="70dp"
            android:maxLines="1"
            android:text="Sofa Cleaning"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />
        <include layout="@layout/vertical_divider"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/btnbground" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_14"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="70dp"
            android:maxLines="1"
            android:text="Bathroom Deep Cleaning"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />
        <include layout="@layout/vertical_divider"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/btnbground" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_14"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="70dp"
            android:maxLines="1"
            android:text="Carpet Cleaning"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />
        <include layout="@layout/vertical_divider"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/btnbground" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_14"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="70dp"
            android:maxLines="1"
            android:text="Kitchen Deep Cleaning"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />
        <include layout="@layout/vertical_divider"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_screen_item_horizontal_card_imageview4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/btnbground" />

        <TextView
            android:id="@+id/home_screen_item_horizontal_card_service_name4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_14"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:gravity="top"
            android:lineSpacingExtra="2.0dip"
            android:maxWidth="70dp"
            android:maxLines="1"
            android:text="Full Home Deep Cleaning"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />
        <include layout="@layout/vertical_divider"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1" />
</LinearLayout>
