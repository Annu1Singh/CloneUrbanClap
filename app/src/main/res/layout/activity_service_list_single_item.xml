<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/margin_93"
        android:layout_width="@dimen/margin_93"
        android:scaleType="fitXY"
        android:src="@drawable/round_corners" />

    <TextView
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="top"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_14"
        android:layout_width="match_parent"
        android:lineSpacingExtra="2.0dip"
        android:maxLines="1"
        android:maxWidth="@dimen/margin_93"
        android:text="Sofa Cleaning"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14sp" />
    <View
        android:layout_height="@dimen/margin_1"
        android:layout_width="match_parent" />
</LinearLayout>